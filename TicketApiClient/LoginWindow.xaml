<Window x:Class="TicketApiClient.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TicketApiClient"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        FocusManager.FocusedElement="{Binding ElementName=tb_user}"
        Title="Ticket Manager" Height="224.041" Width="500">
    <StackPanel>
        <Label Content="Username" Background="LightBlue" Margin="10 5 10 5" Padding="5" />
        <TextBox Margin="10 5 10 5" Padding="5" x:Name="tb_user" />
        <Label Content="Password" Background="LightBlue" Margin="10 5 10 5" Padding="5" />
        <PasswordBox Margin="10 5 10 5" Padding="5" x:Name="tb_pass" />
        <Button Content="Login" Margin="10 5 10 5" Padding="5" Click="Button_Click" IsDefault="True" />
    </StackPanel>
</Window>
